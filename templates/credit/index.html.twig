{% extends 'base.html.twig' %}

{% block title %}Credit index{% endblock %}

{% block body %}
    <h1>Credit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                {# <th>Deadline_months</th> #}
                <th>Left to pay:</th>
                <th>Deadline</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for credit in credits %}
            <tr>
                <td>{{ credit.id }}</td>
                <td>{{ credit.amount }}</td>
                {# <td>{{ credit.deadlineMonths }}</td> #}
                <td>{{ credit.getAmountLeft() }}</td>
                <td>{{ credit.getDeadlineDate() ? credit.getDeadlineDate()|date('Y-m-d') : '' }}</td>

                <td>
                    <a href="{{ path('app_credit_show', {'id': credit.id}) }}">show</a>
                    <a href="{{ path('app_credit_edit', {'id': credit.id}) }}">edit</a>
                    <a href="{{ path('app_payment_new', {'credit_id': credit.id}) }}">pay</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_credit_new') }}">Create new</a>
{% endblock %}

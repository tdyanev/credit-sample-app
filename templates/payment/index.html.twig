{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
    <h1>Payment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Owner</th>
                <th>Credit id</th>
                <th>Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.getOwner().getFullName() }}</td>
                <td><a href="{{ path('app_credit_show', {'id': payment.getCredit().getId() }) }}">{{ payment.getCredit().getName() }}</a></td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}
                    {# <a href="{{ path('app_payment_show', {'id': payment.id}) }}">show</a> #}
                    {# <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payment_new') }}">Create new</a>
{% endblock %}
